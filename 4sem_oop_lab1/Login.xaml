<Window x:Class="_4sem_oop_lab1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4sem_oop_lab1"
        mc:Ignorable="d"
        Title="Authorization" Height="180" Width="300" ResizeMode="NoResize" Icon="account.png">
    <Grid>
        <PasswordBox x:Name="PasswordField" HorizontalAlignment="Left" Margin="70,70,0,0" VerticalAlignment="Top" Width="155" ToolTip="Password"/>
        <TextBox x:Name="LoginField" HorizontalAlignment="Left" Height="23" Margin="70,25,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="155" RenderTransformOrigin="-0.253,0.209" ToolTip="Login"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Right" Margin="0,108,9.6,0" VerticalAlignment="Top" Width="130" ToolTip="Login"/>
        <Button x:Name="RegistrationButton" Content="Registration" HorizontalAlignment="Left" Margin="10,108,0,0" VerticalAlignment="Top" Width="130"/>

    </Grid>
</Window>
